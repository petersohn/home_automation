
export ESPTOOL
ESPTOOL = $ESPTOOL

FLASH_FREQ = 40
FLASH_SIZE = 512K
FLASH_MODE = dio

!elf2bin = |> ^ ESPTOOL %f^ $(ESPTOOL) -eo $(ESP_DIR)/bootloaders/eboot/eboot.elf -bo %o -bm dio -bf $(FLASH_FREQ) -bz $(FLASH_SIZE) -bs .text -bp 4096 -ec -eo %f -bs .irom0.text -bs .text -bs .data -bs .rodata -bc -ec -eo %f |>

export ESP_PORT
FLASH_PORT=$ESP_PORT
FLASH_SPEED=115200

!flash = |> ^ ESPTOOL %f^ $(ESPTOOL) -cd ck -cb $(FLASH_SPEED) -cp $(FLASH_PORT) -ca 0x00000 -cf %f |>

